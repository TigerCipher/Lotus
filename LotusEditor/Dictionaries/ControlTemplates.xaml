                            <util:NumberBox x:Name="nbY" Foreground="{StaticResource Editor.GreenBrush}"
                                            Value="{Binding Y, RelativeSource={RelativeSource TemplatedParent}}" ToolTip="Y value"/>
                            <util:NumberBox x:Name="nbZ" Foreground="{StaticResource Editor.BlueBrush}"
